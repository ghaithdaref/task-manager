{
  "name": "smart-task-manager",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/api",
    "apps/web"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm -w apps/api run build && npm -w apps/web run build",
    "start": "npm -w apps/api run start"
  }
}