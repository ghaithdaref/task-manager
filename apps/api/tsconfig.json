{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types", "../node_modules/@types", "./node_modules/@types"],
    "noImplicitAny": false
  },
  "include": ["src"]
}
