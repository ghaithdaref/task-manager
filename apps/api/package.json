{
  "name": "smart-task-manager-api",
  "version": "0.1.0",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json --skipLibCheck",
    "start": "node dist/index.js",
    "test": "jest",
    "migrate": "ts-node -e \"import('./src/db/index').then(m => m.initializeSchema().then(() => process.exit(0)).catch(e => { console.error(e); process.exit(1); }))\"",
    "cleanup-db": "ts-node src/db/cleanup.ts",
    "reset-db": "ts-node src/db/cleanup.ts --reinit",
    "test-db": "ts-node src/db/test-connection.ts",
    "create-db": "ts-node create-database.ts",
    "build:api": "npm -w apps/api run build",
    "start:api": "npm -w apps/api run start"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
